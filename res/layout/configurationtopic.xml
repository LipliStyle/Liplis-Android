<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/setting_repeat">
    <ScrollView android:layout_marginBottom="50dip" android:layout_width="fill_parent" android:id="@+id/sclv" android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/llMasterConfigTopic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/textBack"
                android:text="@string/configure_intro"
                android:textColor="@color/black" >
            </TextView>

            <LinearLayout
                android:id="@+id/llIcon"
                android:layout_width="fill_parent"
                android:layout_height="100sp"
                android:layout_gravity="center_horizontal" >

                <LinearLayout
                    android:id="@+id/llIntro"
                    android:layout_width="220sp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtIntro1"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/configure_topic_intro1"
                        android:textColor="@color/black" >
                    </TextView>

                    <TextView
                        android:id="@+id/txtIntro2"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/configure_topic_intro2"
                        android:textColor="@color/black" >
                    </TextView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imChar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/icon" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpTopic03"
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTopic"
                android:layout_width="fill_parent"
                android:layout_height="20sp" >

                <TextView
                    android:id="@+id/txtTopicTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textBack"
                    android:text="@string/configure_Toipic"
                    android:textColor="@color/black" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTopicChk"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/chkTopicNews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/configure_Toipic1"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/chkTopic2ch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/configure_Toipic2"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/chkTopicNico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/configure_Toipic3"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/chkTopicRss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/configure_Toipic4"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/chkTopicTwitterPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/configure_Toipic5"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/chkTopicTwitterMy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/configure_Toipic6"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/chkTopicTwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/configure_Toipic7"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpTopicSet01"
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTopicSetTitle"
                android:layout_width="fill_parent"
                android:layout_height="20sp" >

                <TextView
                    android:id="@+id/txtTopicSet1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textBack"
                    android:text="@string/control_talk_setting_kidoku"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTopicSet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/chkTopicSetAlreadyRead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/configure_topic_setting_already_read"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpTopicSet02_2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="20sp" >

                <TextView
                    android:id="@+id/txtTopicSet2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textBack"
                    android:text="@string/control_talk_setting_runout"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/TopicSet2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/rdRunOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/rboRunOut1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/control_talk_setting_runout1"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/rboRunOut2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/control_talk_setting_runout3"
                        android:textColor="@color/black" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpTopicSet03"
                android:layout_width="fill_parent"
                android:layout_height="5sp"
                android:orientation="horizontal"
                android:padding="5dip" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpase9"
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNewsRangeTitle"
                android:layout_width="fill_parent"
                android:layout_height="20sp" >

                <TextView
                    android:id="@+id/txtNewsRangeTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textBack"
                    android:text="@string/configure_range"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNewsRange"
                android:layout_width="fill_parent"
                android:layout_height="50sp" >

                <Spinner
                    android:id="@+id/spNewsRange"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/configure_NewsRange" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpTopic10"
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWebRegisterTitle"
                android:layout_width="fill_parent"
                android:layout_height="20sp" >

                <TextView
                    android:id="@+id/txtWebRegister"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textBack"
                    android:text="@string/configure_topic_web_register"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWebRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/llSpTopic11"
                    android:layout_width="fill_parent"
                    android:layout_height="5sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="5dip" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llWebRegister02"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/llWebRegisterSp01"
                        android:layout_width="5sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnConfigWebRegister"
                        android:layout_width="0dip"
                        android:layout_height="50sp"
                        android:layout_weight="10"
                        android:background="@drawable/button"
                        android:drawableLeft="@drawable/sel_key"
                        android:padding="5dip"
                        android:text="@string/configure_topic_btn_web_register"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:id="@+id/llWebRegisterSp02"
                        android:layout_width="5sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSpTopic12"
                    android:layout_width="fill_parent"
                    android:layout_height="5sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="5dip" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpTopic13"
                android:layout_width="fill_parent"
                android:layout_height="5sp"
                android:orientation="horizontal"
                android:padding="5dip" >
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout android:id="@+id/llButton" android:layout_height="60sp" android:orientation="horizontal" android:layout_marginTop="-60sp" android:layout_width="fill_parent" android:padding="5dip">

        <LinearLayout
            android:id="@+id/llButtonConfigTopic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnConfigTopicSave"
                android:layout_width="0dip"
                android:layout_height="50sp"
                android:layout_gravity="right"
                android:layout_weight="10"
                android:background="@drawable/button"
                android:padding="5dip"
                android:text="@string/configure_save"
                android:textColor="@color/black" >

</Button>

            <LinearLayout
                android:id="@+id/llSpTopic20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:orientation="horizontal" >

</LinearLayout>

            <Button
                android:id="@+id/btnConfigTopicClose"
                android:layout_width="0dip"
                android:layout_height="50sp"
                android:layout_gravity="left"
                android:layout_weight="10"
                android:background="@drawable/button"
                android:padding="5dip"
                android:text="@string/configure_close"
                android:textColor="@color/black" >

</Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>