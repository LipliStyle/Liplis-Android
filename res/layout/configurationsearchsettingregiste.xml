<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/setting_repeat"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llSpase0"
        android:layout_width="fill_parent"
        android:layout_height="2sp"
        android:background="@color/black"
        android:orientation="horizontal" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMaster"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/textBack"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/textBack"
            android:text="@string/topic_setting_titile"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/llSp03"
            android:layout_width="fill_parent"
            android:layout_height="2sp"
            android:background="@color/black"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSp04"
            android:layout_width="fill_parent"
            android:layout_height="40dp" >

            <Spinner
                android:id="@+id/spSearchSettingTopic"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:entries="@array/configure_Topic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSearchSettingRegistPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/llSearchSettingRegistSp1"
                android:layout_width="15dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

            </LinearLayout>

            <Button
                android:id="@+id/btnSearchSettingAdd"
                android:layout_width="0dip"
                android:layout_height="40sp"
                android:layout_weight="10"
                android:background="@drawable/button"
                android:drawableLeft="@drawable/sel_plus"
                android:padding="5dip"
                android:text="@string/topic_setting_btn1"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/llSearchSettingRegistSp2"
                android:layout_width="15dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

            </LinearLayout>

            <Button
                android:id="@+id/btnSearchSettingUpd"
                android:layout_width="0dip"
                android:layout_height="40sp"
                android:layout_weight="10"
                android:background="@drawable/button"
                android:drawableLeft="@drawable/sel_upd"
                android:padding="5dip"
                android:text="@string/topic_setting_btn2"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/llSearchSettingRegistSp3"
                android:layout_width="15dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSp2"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:orientation="vertical" >
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSpase1"
        android:layout_width="fill_parent"
        android:layout_height="2sp"
        android:background="@color/black"
        android:orientation="horizontal" >

    </LinearLayout>

    <ListView
        android:id="@+id/lvSearchSettingRegistList"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="50dip"
        android:cacheColorHint="#00000000" >

    </ListView>

    <LinearLayout
        android:id="@+id/llButtonSearchSettingRegist"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_marginTop="-60sp"
        android:orientation="horizontal"
        android:padding="5dip" >

        <LinearLayout
            android:id="@+id/llButtonSearchSettingRegist01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/llsp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:orientation="horizontal" >

            </LinearLayout>

            <Button
                android:id="@+id/btnSearchSettingRegistClose"
                android:layout_width="0dip"
                android:layout_height="50sp"
                android:layout_gravity="left"
                android:layout_weight="10"
                android:background="@drawable/button"
                android:padding="5dip"
                android:text="@string/configure_close"
                android:textColor="@color/black" >

            </Button>

            <LinearLayout
                android:id="@+id/llsp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>