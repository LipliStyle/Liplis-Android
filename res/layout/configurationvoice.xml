<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/setting_repeat">

    <ScrollView
        android:id="@+id/sclvConrigVoice"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="50dip" >

        <LinearLayout
            android:id="@+id/llMasterConrigVoice"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llConrigVoiceBlackLine00"
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:orientation="horizontal" >

            </LinearLayout>

            <TextView
                android:id="@+id/txtConrigVoiceTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/textBack"
                android:text="@string/voice_title"
                android:textColor="@color/black" >
            </TextView>

            <LinearLayout
                android:id="@+id/llConrigVoiceIcon"
                android:layout_width="fill_parent"
                android:layout_height="100sp"
                android:layout_gravity="center_horizontal" >

                <LinearLayout
                    android:id="@+id/llConrigVoiceIntro"
                    android:layout_width="220sp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtConrigVoiceIntro1"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_title_intoro1"
                        android:textColor="@color/black" >
                    </TextView>

                    <TextView
                        android:id="@+id/txtConrigVoiceIntro2"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_title_intoro2"
                        android:textColor="@color/black" >
                    </TextView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imConrigVoiceChar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/icon" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLiplisConfigBlackLine04"
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:orientation="horizontal" >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLiplisConfigVoiceTitle"
                android:layout_width="fill_parent"
                android:layout_height="20sp" >

                <TextView
                    android:id="@+id/txtLiplisConfigVoiceTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textBack"
                    android:text="@string/configure_voice"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLiplisConfigVoice"
                android:layout_width="fill_parent"
                android:layout_height="60sp" >

                <CheckBox
                    android:id="@+id/chkVoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/configure_voice1"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llConrigVoiceBlackLine01"
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:orientation="horizontal" >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llConrigVoiceRateTitle"
                android:layout_width="fill_parent"
                android:layout_height="20sp" >

                <TextView
                    android:id="@+id/txtConrigVoiceRateTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textBack"
                    android:text="@string/voice_title_rate"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llConrigVoiceRate"
                android:layout_width="fill_parent"
                android:layout_height="50sp" >

                <LinearLayout
                    android:id="@+id/llConrigVoiceSp04"
                    android:layout_width="20dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBarConrigVoiceRate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtConrigVoiceRate"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llConrigVoiceBlackLine02"
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:orientation="horizontal" >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llConrigVoicePitchTitle"
                android:layout_width="fill_parent"
                android:layout_height="20sp" >

                <TextView
                    android:id="@+id/txtllConrigVoicePitchTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textBack"
                    android:text="@string/voice_title_pitch"
                    android:textColor="@color/black" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llConrigVoiceSp01"
                android:layout_width="fill_parent"
                android:layout_height="5sp"
                android:orientation="horizontal"
                android:padding="5dip" >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llConrigVoiceVoicePitch"
                android:layout_width="fill_parent"
                android:layout_height="50sp" >

                <LinearLayout
                    android:id="@+id/llConrigVoiceSp05"
                    android:layout_width="20dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBarllConrigVoicePitch"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtConrigVoicePitch"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llConrigVoiceSp02"
                android:layout_width="fill_parent"
                android:layout_height="5sp"
                android:orientation="horizontal"
                android:padding="5dip" >

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llConrigVoiceSpButton"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_marginTop="-60sp"
        android:orientation="horizontal"
        android:padding="5dip" >

        <LinearLayout
            android:id="@+id/llButtonConrigVoice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnConrigVoiceSave"
                android:layout_width="0dip"
                android:layout_height="50sp"
                android:layout_gravity="right"
                android:layout_weight="10"
                android:background="@drawable/button"
                android:padding="5dip"
                android:text="@string/configure_save"
                android:textColor="@color/black" >

</Button>

            <LinearLayout
                android:id="@+id/llConrigVoiceSp03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:orientation="horizontal" >

</LinearLayout>

            <Button
                android:id="@+id/btnConrigVoiceClose"
                android:layout_width="0dip"
                android:layout_height="50sp"
                android:layout_gravity="left"
                android:layout_weight="10"
                android:background="@drawable/button"
                android:padding="5dip"
                android:text="@string/configure_close"
                android:textColor="@color/black" >

</Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>