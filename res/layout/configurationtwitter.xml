<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/setting_repeat">
    <ScrollView android:layout_marginBottom="50dip" android:layout_width="fill_parent" android:id="@+id/sclv" android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/llMaster"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llSp0"
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:orientation="horizontal" >
            </LinearLayout>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/textBack"
                android:text="@string/twitter_liplis_title"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/llIcon"
                android:layout_width="fill_parent"
                android:layout_height="100sp" >

                <LinearLayout
                    android:id="@+id/llIntro"
                    android:layout_width="220sp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtIntro1"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/twitter_liplis_text1"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtIntro3"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/twitter_liplis_text3"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtIntro4"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/twitter_liplis_text4"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:id="@+id/llLink"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/llSpaseBtn"
                            android:layout_width="10sp"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/twitterImage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSp1"
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTwitterPassTitle"
                android:layout_width="fill_parent"
                android:layout_height="20sp" >

                <TextView
                    android:id="@+id/txtTwitterPassTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textBack"
                    android:text="@string/twitter_oauth"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTwitterStatus"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:padding="5dip" >

                <TextView
                    android:id="@+id/txtTwitterStatusTitle"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="認証状態 : "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtTwitterStatus"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:text="未承認"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnSetTwitterPassCode"
                    android:layout_width="0dip"
                    android:layout_height="50sp"
                    android:layout_weight="10"
                    android:background="@drawable/button"
                    android:padding="5dip"
                    android:text="@string/twitter_oauthbtn"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpase4"
                android:layout_width="fill_parent"
                android:layout_height="5sp"
                android:orientation="horizontal"
                android:padding="5dip" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpTopic07"
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAutoSleepTitle"
                android:layout_width="fill_parent"
                android:layout_height="20sp" >

                <TextView
                    android:id="@+id/txtAutoSleepTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textBack"
                    android:text="@string/control_twitter_user_title"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpTopic08"
                android:layout_width="fill_parent"
                android:layout_height="5sp"
                android:orientation="horizontal"
                android:padding="5dip" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTwitter01"
                android:layout_width="fill_parent"
                android:layout_height="60sp" >

                <LinearLayout
                    android:id="@+id/llTwitterSp01"
                    android:layout_width="5sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >
                </LinearLayout>

                <Button
                    android:id="@+id/btnConfigTopicTwitterUser"
                    android:layout_width="0dip"
                    android:layout_height="50sp"
                    android:layout_weight="10"
                    android:background="@drawable/button"
                    android:drawableLeft="@drawable/sel_twitter"
                    android:padding="5dip"
                    android:text="@string/control_twitter_user_btn"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/llTwitterSp02"
                    android:layout_width="5sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpTwitterMode"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="20sp" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textBack"
                    android:text="@string/control_twitter_mode_title"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTwitterMode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/rdTwitterMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/rboTwitterModeRandom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/control_twitter_mode_random"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/rdoTwitterModeReal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/control_twitter_mode_real"
                        android:textColor="@color/black" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpTopic09"
                android:layout_width="fill_parent"
                android:layout_height="5sp"
                android:orientation="horizontal"
                android:padding="5dip" >
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout android:id="@+id/llButton" android:layout_height="60sp" android:orientation="horizontal" android:layout_marginTop="-60sp" android:layout_width="fill_parent" android:padding="5dip">
        <LinearLayout android:id="@+id/llButton" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="left" android:layout_width="fill_parent" android:layout_gravity="left">

            <Button
                android:id="@+id/btnTwitterConfigSave"
                android:layout_width="0dip"
                android:layout_height="50sp"
                android:layout_gravity="right"
                android:layout_weight="10"
                android:background="@drawable/button"
                android:padding="5dip"
                android:text="@string/configure_save"
                android:textColor="@color/black" >

</Button>

            <LinearLayout
                android:id="@+id/llsp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:orientation="horizontal" >
</LinearLayout>

            <Button
                android:id="@+id/btnTwitterConfigClose"
                android:layout_width="0dip"
                android:layout_height="50sp"
                android:layout_gravity="left"
                android:layout_weight="10"
                android:background="@drawable/button"
                android:padding="5dip"
                android:text="@string/configure_close"
                android:textColor="@color/black" >

</Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>